[user]
    name = Ronak Gandhi
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[difftool]
	prompt = false

[color]
    branch = auto
    diff = auto
    status = auto
    grep = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green
    changed = yellow
    untracked = cyan

[log]
    date = relative

[alias]
    s = status -s
[filter "lfs"]
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f
    required = true
[show]
	tool = vimdiff
[mergetool "vimdiff"]
	path = nvim
