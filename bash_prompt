#!/bin/bash

tput sgr0; # reset colors

bold=$(tput bold);
reset=$(tput sgr0);
black=$(tput setaf 235)
red=$(tput setaf 1)
green=$(tput setaf 142)
yellow=$(tput setaf 214)
blue=$(tput setaf 66)
purple=$(tput setaf 175)
cyan=$(tput setaf 37)
gray=$(tput setaf 246)
white=$(tput setaf 223)
orange=$(tput setaf 208)

# Highlight the user name when logged in as root.
if [[ "$USER" == "root" ]]; then
    userStyle="$red";
else
    userStyle="$orange";
fi;

# Highlight the hostname when connected via SSH.
if [[ "$SSH_TTY" ]]; then
    hostStyle="$green";
else
    hostStyle="$gray";
fi;

function prompt_command {
    ret_code=$?

    # $USER at $hostname in $pwd
    PS1="\[$userStyle\]\u "
    PS1+="\[$reset\]at \[$hostStyle\]\H "
    PS1+="\[$reset\]in \[$cyan\]\W "

    # Are we running in a shell invoked from Vim?
    if [ "$VIM" ]; then
        PS1+="(Vim)"
    fi

    PS1+="\[\n\]"

    # Did last command return non-zero value?
    if [ $ret_code != 0 ]; then
        PS1+="\[$red\]$ret_code>"
    else
        PS1+="\[$green\]$"
    fi

    PS1+="\[$reset\] "
}
export PROMPT_COMMAND=prompt_command
export PS2="\[$blue\]continue -> \[$reset\]"
